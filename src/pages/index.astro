    </div>
    <p class="hero-bio">
      I build bridges between physics and machine learning — from quantum field theory to
      vision transformers for stellar spectroscopy. My work spans stochastic processes,
      deep learning, and computational astrophysics.
    </p>
  </section>

  <div class="section-divider"></div>

  <!-- Projects -->
  <section class="section-wide animate-in delay-2">
    <div class="projects-header">
      <h2>Projects</h2>
      <p class="projects-subtitle">Research and side projects spanning physics, machine learning, and data science.</p>
    </div>
    <div class="card-grid">
      {sortedProjects.map(project => (
        <ProjectCard project={project} />
      ))}
    </div>
  </section>

  <Footer />
</BaseLayout>

<style>
  .hero {
    max-width: 860px;
    padding-top: 5rem;
    padding-bottom: 3rem;
  }

  .hero-profile {
    display: flex;
    align-items: center;
    gap: 2.5rem;
    margin-bottom: 2.25rem;
  }

  .hero-avatar-wrapper {
    position: relative;
    flex-shrink: 0;
    width: 156px;
    height: 156px;
    border-radius: 50%;
    padding: 4px;
    background: transparent;
  }

  .hero-avatar-wrapper::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 50%;
    background: conic-gradient(
      from 0deg,
      var(--monet-lavender),
      var(--monet-sky),
      var(--monet-mint),
      var(--monet-yellow),
      var(--monet-rose),
      var(--monet-lavender)
    );
    animation: avatar-border-rotate 6s linear infinite;
    z-index: 0;
  }

  .hero-avatar-wrapper::after {
    content: '';
    position: absolute;
    inset: -6px;
    border-radius: 50%;
    background: conic-gradient(
      from 180deg,
      var(--monet-rose),
      var(--monet-lavender),
      var(--monet-sky),
      var(--monet-mint),
      var(--monet-rose)
    );
    animation: avatar-border-rotate 6s linear infinite reverse;
    z-index: -1;
    filter: blur(12px);
    opacity: 0.5;
  }

  @keyframes avatar-border-rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .hero-avatar {
    position: relative;
    z-index: 1;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid var(--bg-primary);
    display: block;
  }

  .hero-text {
    flex: 1;
  }

  .hero-text h1 {
    margin-bottom: 0.35rem;
    line-height: 1.15;
  }

  .hero-subtitle {
    font-size: 1.15rem;
    color: var(--accent-purple);
    font-weight: 500;
    margin-bottom: 0.3rem;
    letter-spacing: 0.03em;
    opacity: 0.9;
  }

  .hero-affiliation {
    font-size: 0.92rem;
    color: var(--text-muted);
    line-height: 1.5;
    margin-bottom: 1.1rem;
  }

  .hero-links {
    display: flex;
    gap: 0.6rem;
    flex-wrap: wrap;
  }

  .hero-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.45rem 1rem;
    border-radius: 10px;
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--text-secondary);
    background: rgba(255,255,255,0.5);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(124,92,191,0.12);
    transition: all 0.3s cubic-bezier(0.22, 1, 0.36, 1);
    text-decoration: none;
  }

  .hero-link:hover {
    color: var(--accent-purple);
    background: rgba(255,255,255,0.75);
    border-color: rgba(124,92,191,0.3);
    transform: translateY(-2px);
    box-shadow:
      0 4px 16px rgba(124,92,191,0.12),
      0 0 0 1px rgba(124,92,191,0.06);
  }

  .hero-link svg {
    flex-shrink: 0;
    opacity: 0.65;
    transition: opacity 0.2s ease;
  }

  .hero-link:hover svg {
    opacity: 1;
  }

  .hero-bio {
    font-size: 1.08rem;
    line-height: 1.85;
    color: var(--text-secondary);
    max-width: 680px;
    position: relative;
    padding-left: 1.25rem;
    border-left: 2px solid rgba(124,92,191,0.25);
  }

  .projects-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .projects-header h2 {
    margin-bottom: 0.5rem;
  }

  .projects-subtitle {
    font-size: 1rem;
    color: var(--text-muted);
    max-width: 500px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .hero {
      padding-top: 3.5rem;
    }

    .hero-profile {
      flex-direction: column;
      text-align: center;
    }

    .hero-avatar-wrapper {
      width: 124px;
      height: 124px;
    }

    .hero-links {
      justify-content: center;
    }

    .hero-bio {
      text-align: center;
      border-left: none;
      padding-left: 0;
    }
  }
</style>

<script>
  // Initialize Monet background
  import { initMonetBackground } from '../islands/MonetBackground';
  const bgContainer = document.getElementById('monet-bg');
  if (bgContainer) initMonetBackground(bgContainer);

  // Initialize card animations
  import { initMonetGlass } from '../cards/CardMonetGlass';
  import { initMinimalistMath } from '../cards/CardMinimalistMath';
  import { initSketchFlow } from '../cards/CardSketchFlow';
  import { initParticleSim } from '../cards/CardParticleSim';
  import { initNeuralField } from '../cards/CardNeuralField';
  import { initClusterMap } from '../cards/CardClusterMap';
  import { initStellarSpectrum } from '../cards/CardStellarSpectrum';
  import { initDefault } from '../cards/CardDefault';

  const cardInits: Record<string, (el: HTMLElement) => void> = {
    MonetGlass: initMonetGlass,
    MinimalistMath: initMinimalistMath,
    SketchFlow: initSketchFlow,
    ParticleSim: initParticleSim,
    NeuralField: initNeuralField,
    ClusterMap: initClusterMap,
    StellarSpectrum: initStellarSpectrum,
    Default: initDefault,
  };

  document.querySelectorAll<HTMLElement>('[data-card-init]').forEach(el => {
    const style = el.dataset.cardInit!;
    const init = cardInits[style] || cardInits.Default;
    init(el);
  });
</script>
