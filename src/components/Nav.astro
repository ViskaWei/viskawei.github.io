---
const currentPath = Astro.url.pathname.replace(/\/$/, '') || '/';
const links = [
  { href: '/', label: 'Home' },
  { href: '/background', label: 'Background' },
  { href: '/skills', label: 'Skills' },
  { href: '/factory', label: 'Factory' },
  { href: 'https://scholar.google.com/citations?user=YOUR_ID', label: 'Publications', external: true },
  { href: 'https://github.com/viskawei', label: 'GitHub', external: true },
];
---

<nav class="nav">
  <a href="/" class="nav-brand">VW</a>
  <div class="nav-links">
    {links.map(link => (
      <a
        href={link.href}
        class:list={['nav-link', { active: !link.external && currentPath === link.href }]}
        {...(link.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
      >
        {link.label}
        {link.external && <span class="external-icon">â†—</span>}
      </a>
    ))}
  </div>
  <button class="nav-toggle" aria-label="Toggle menu">
    <span></span><span></span><span></span>
  </button>
</nav>

<style>
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 2.5rem;
    background: rgba(255,255,255,0.55);
    backdrop-filter: blur(28px) saturate(1.5);
    -webkit-backdrop-filter: blur(28px) saturate(1.5);
    border-bottom: 1px solid rgba(255,255,255,0.6);
    box-shadow:
      0 1px 0 rgba(196,181,224,0.12),
      0 4px 20px rgba(140,120,200,0.06);
    transition: all 0.3s ease;
  }

  .nav-brand {
    font-family: 'Playfair Display', serif;
    font-size: 1.6rem;
    font-weight: 700;
    background: linear-gradient(135deg, #7c5cbf, #2da5b8);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-decoration: none;
    letter-spacing: 0.01em;
    transition: all 0.25s ease;
  }

  .nav-brand:hover {
    opacity: 0.8;
    transform: scale(1.03);
  }

  .nav-links {
    display: flex;
    gap: 0.35rem;
    align-items: center;
  }

  .nav-link {
    font-size: 0.9rem;
    font-weight: 500;
    color: #4a4a6a;
    text-decoration: none;
    transition: all 0.25s cubic-bezier(0.22, 1, 0.36, 1);
    position: relative;
    padding: 0.4rem 0.9rem;
    border-radius: 8px;
  }

  .nav-link:hover {
    color: #7c5cbf;
    background: rgba(124,92,191,0.08);
  }

  .nav-link.active {
    color: #7c5cbf;
    background: rgba(124,92,191,0.1);
    font-weight: 600;
  }

  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: 2px;
    left: 50%;
    transform: translateX(-50%);
    width: 20px;
    height: 3px;
    background: linear-gradient(90deg, #7c5cbf, #2da5b8);
    border-radius: 3px;
    box-shadow: 0 0 8px rgba(124,92,191,0.3);
  }

  .external-icon {
    font-size: 0.65rem;
    margin-left: 2px;
    opacity: 0.4;
    transition: all 0.2s ease;
  }

  .nav-link:hover .external-icon {
    opacity: 0.8;
    transform: translate(1px, -1px);
  }

  .nav-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 6px;
    border-radius: 6px;
    transition: background 0.15s;
  }

  .nav-toggle:hover {
    background: rgba(124,92,191,0.08);
  }

  .nav-toggle span {
    display: block;
    width: 20px;
    height: 2px;
    background: #4a4a6a;
    border-radius: 2px;
    transition: transform 0.25s ease, opacity 0.25s ease;
  }

  @media (max-width: 768px) {
    .nav {
      padding: 0.75rem 1.5rem;
    }

    .nav-links {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      flex-direction: column;
      padding: 1rem 1.5rem;
      gap: 0.25rem;
      background: rgba(255,255,255,0.88);
      backdrop-filter: blur(28px) saturate(1.5);
      -webkit-backdrop-filter: blur(28px) saturate(1.5);
      border-bottom: 1px solid rgba(255,255,255,0.5);
      box-shadow: 0 8px 32px rgba(140,120,200,0.1);
    }

    .nav-links.open {
      display: flex;
    }

    .nav-toggle {
      display: flex;
    }
  }
</style>

<script>
  const toggle = document.querySelector('.nav-toggle');
  const links = document.querySelector('.nav-links');
  toggle?.addEventListener('click', () => links?.classList.toggle('open'));
</script>
